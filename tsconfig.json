{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "importsNotUsedAsValues": "error",
    "types": ["@types/node", "./src/types/server"],
    "rootDir": "src",
    "outDir": "dist"
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"]
}
